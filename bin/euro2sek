#!/usr/bin/python
# -*- coding: UTF8 -*-

import sys
from sek_resources import *


if len(sys.argv) < 2:
    short_name = sys.argv[0].split('/')[-1]
    print("Usage: {0} valueEuro [valueEuro ...]".format(short_name))
    exit(0)

prices = [float(n) for n in sys.argv[1:]]
euros_and_sek = [(euro_price, euro_to_sek(euro_price)) for euro_price in prices]

max_price_length = max([len("%.2f" % n) for n in prices])

print("For 1€ being {0} sek, we have:".format(one_euro_in_sek))

for (e, s) in euros_and_sek:
    padding = (max_price_length - len("%.2f" % e)) * " "
    print("%.2f" % e + padding + " € are %.2f sek" % s)
